#include <iostream>
using namespace std;

int sum(int szam){
    int eredmeny=0;
    for(int i=1; i<(szam+1); i++){
        eredmeny=eredmeny+i;
    }
    return eredmeny;
}

int atlag(int hf){
    return sum(hf)/hf;
}
int main()
{
    std::cout<< sum(3) <<std::endl;
    std::cout<< atlag(3) <<std::endl;
    return 0;
}
