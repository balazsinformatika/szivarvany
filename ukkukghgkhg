#include <iostream>
using namespace std;

void piramis(int meret){
    for(int i=1; i<(meret+1); i++){
        for(int j=i; j<(meret+1); j++){
            std::cout << j;
        }
        std::cout << std::endl;
    }
}
int main()
{
    piramis(6);
    return 0;
}



#include <iostream>
using namespace std;

int hatvany(int szam, int kitevo){
int eredmeny=1;

for(int i=0; i<kitevo; i++){
    eredmeny=eredmeny*szam;
    }
    
return eredmeny;
}

int main(){

std::cout << hatvany(5,2) <<std::endl;
    return 0;
}
